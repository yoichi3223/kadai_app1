<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title%></td>
    <td><%= book.body%></td>
　　 <td><%= link_to 'Show',book_path(book) %><td>
    <td><%= link_to 'Edit',edit_book_path(book) %><td>
    <td><%= link_to 'destroy',book_path(book), method: :delete %><td>
  </tr>
  <% end %>
</table>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <h2 class="error-message"><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<p><%= f.submit 'Create Book' %></p>
<% end %>